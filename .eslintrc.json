{
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb/base",
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "import/no-extraneous-dependencies": "off",
        "class-methods-use-this": "off",
        "max-len": "off",
        "import/no-dynamic-require": "off",
        "no-param-reassign": "off",
        "no-underscore-dangle": "off",
        "no-plusplus": "off",
        "radix": "off"
    },
    "globals": {
        "logger": true,
        "modelFactory": true
    }
}